    <style>
        .backcolor {
            background: #b4fff8;
        }

        a.sliderImage {
            margin: 0 25px 0 25px;
            text-align: center;
            display: block;
        }

        a.pname {
            margin: 25px;
            text-align: center;
            display: block;
        }

        #slider {
            height: 195px;
        }
    </style>
</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(".", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @*<a href="/#/"><img src="buyalot.PNG" class="navbar-brand" /></a>*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">

  
                </ul>
                @Html.Partial("_CustomerLoginPartialPage")

            </div>

        </div>

    </div>


    <div id="headSection">
        <div class="nav navbar-left">
            <ul>
                <li class="dropdown" dropdown="">

                    <h2 style="background-color:#373737">@Html.ActionLink("All Product Categories", "Index", new { controller = "Home" }, new { @class = "dropdown-toggle", style = "color:#ffffff;font-size:20px;" })</h2>
                    <ul class="dropdown" role="menu">

                        @foreach (var category in iCategoryRepository.findAll())
                        {
                            <li>
                                <a href="@Url.Action("Category", "Home", new { id = category.CategoryName })">@category.CategoryName</a>
                            </li>
                        }

                    </ul>
                </li>
            </ul>
        </div>
        <br />
        <div class="col-sm-offset-2">
          
            @using (Html.BeginForm())
            {
                <div class="form-inline">
                    

                    <input type="text" id="myInput" name="SearchString" onkeyup="myFunction()" style="max-width:900px;" placeholder="Search for products...">
                </div>
            }
        </div>
    </div>

    <br />

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <br />

    <footer class="bottom footer-Wrap">

        <div class="container">
            <section class="pull-right">
                <h3><b>Follow Us</b></h3>
                <a href="https://www.facebook.com/profile.php?id=100007682088283"><i class="fa fa-facebook-official w3-hover-text-indigo w3-large"></i></a>
                <a href="https://www.instagram.com/thereal_sifsilva/"><i class="fa fa-instagram w3-hover-text-purple w3-large"></i></a>
                <a href="https://twitter.com/Sifsilva"><i class="fa fa-twitter w3-hover-text-light-blue w3-large"></i></a>
                <a href="https://za.linkedin.com/in/sifiso-mazibuko-24929263"><i class="fa fa-linkedin w3-hover-text-indigo w3-large"></i></a><br />
                <p>
                    <a><span class="glyphicon glyphicon-star"></span><strong>@Html.ActionLink(" Subscribe", "Subscribe", new { controller = "Subscribe" })</strong></a>
                </p>

            </section>
            <section class="col-xs-12 col-sm-2">
                <h3><b>Categories</b></h3>
                <div>
                    <ul>
                        @foreach (var category in iCategoryRepository.findAll())
                        {
                            <li>
                                <a href="@Url.Action("Category", "Home", new { id = category.CategoryName })">@category.CategoryName</a>
                            </li>
                        }
                    </ul>
                </div>
            </section>
            <section class="col-xs-12 col-sm-4">
                <h3><b>My Account</b></h3>

                @if (Session["cusName"] != null)
                {
                    <ul>
                        <li>@Html.ActionLink("My Personal details", "EditProfile", "Profile", new { id = Convert.ToInt32(Session["userID"]) }, new { @class = "editProfile" })</li>
                    </ul>
                    <ul>
                        <li>@Html.ActionLink("My Orders", "Index", new { controller = "Order" }, new { @class = "trackOrder" })</li>
                    </ul>
                    <ul>
                        <li>@Html.ActionLink("My Invoice", "Invoice", new { controller = "Invoice" }, new { @class = "invoice" })</li>
                    </ul>
                }
                else
                {
                    <ul>
                        <li>@Html.ActionLink("Personal details", "Login", "Account")</li>
                    </ul>
                    <ul>
                        <li>@Html.ActionLink("My Orders", "Login", new { controller = "Account" }, new { @class = "trackOrder" })</li>
                    </ul>
                    <ul>
                        <li>@Html.ActionLink("My Invoice", "Login", new { controller = "Account" }, new { @class = "invoice" })</li>
                    </ul>
                }

            </section>
            <section class="col-xs-12 col-sm-4">
                <h3><b>Contact Us</b></h3>
                <div>
                    <ul>
                        <li><span class="glyphicon glyphicon-phone"></span> Call Us: +27769971643 or +27740771643</li>
                        <li><span class="glyphicon glyphicon-envelope"></span> Email Us: tumelophuti@gmail.com</li>
                    </ul>
                </div>
            </section>
        </div>
    </footer>
    <br />
    <footer class="container" id="footer-Wrap">
        <p>&copy; @DateTime.Now.Year - Buyalot Online Shopping Customer</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
