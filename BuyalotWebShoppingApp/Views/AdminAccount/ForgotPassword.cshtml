@model BuyalotWebShoppingApp.Models.Admin

@{
    ViewBag.Title = "Admin Account | Forgot Password";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="modal-dialog">
        <div class="modal-content">
            <button id="btnClose" style="color:red" type="button" class="close" data-dismiss="modal">&times;</button>
            <div class="modal-body">
                <fieldset>
                    <h1 class="container">Reset Your Password</h1>
                    <p>Email will be sent to you with password</p>
                    <div class="form-group">
                        <label for="email" class="col-sm-3 control-label">Email Address:</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-sm-9">
                        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-send"></span> Send</button>
                        <br />
                        <p>
                            @Html.ActionLink("Back to Login", "Login")
                        </p>
                    </div>
                    <br />

                </fieldset>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $('#btnClose').click(function () {
            $('.modal-dialog').modal('hide');
        });
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
